{
    "name": "vscode-theia-test",
    "displayName": "vscode-theia-test",
    "description": "ui.json插件",
    "version": "0.0.1",
    "publisher": "huzhijie1987",
    "engines": {
        "vscode": "^1.39.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/zhijieh/vscode-extension-test"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:json",
        "onCommand:uijson.showPreview",
        "*"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [{
            "command": "uijson.showPreview",
            "title": "组件预览",
            "category": "Json",
            "icon": {
                "light": "./media/preview-light.svg",
                "dark": "./media/preview-dark.svg"
            }
        }],
        "menus": {
            "editor/title": [{
                "command": "uijson.showPreview",
                "when": "editorLangId == json && resourceFilename == ui.json",
                "alt": "uijson.showPreview",
                "group": "navigation"
            }]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src --ext ts"
    },
    "devDependencies": {
        "@types/glob": "^7.1.4",
        "@types/node": "14.x",
        "@types/vscode": "^1.39.0",
        "@types/ws": "^8.2.0",
        "@typescript-eslint/eslint-plugin": "^4.31.1",
        "@typescript-eslint/parser": "^4.31.1",
        "@vscode/test-electron": "^1.6.2",
        "axios": "^0.21.4",
        "bufferutil": "^4.0.5",
        "eslint": "^7.32.0",
        "glob": "^7.1.7",
        "ts-loader": "^9.2.5",
        "typescript": "^4.4.3",
        "utf-8-validate": "^5.0.7",
        "webpack": "^5.52.1",
        "webpack-cli": "^4.8.0",
        "ws": "^8.2.3"
    }
}
